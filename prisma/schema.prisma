generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id      String   @id
  userID  String
  roomID  String
  content String
  sentAt  DateTime @default(now())
}

model Room {
  id        String   @id
  name      String
  createdAt DateTime @default(now())
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
}
